<div class="container">
	<h1>Sign in to access your personal list</h1>
	<div class="rule_yellow" style="width:570px"></div>
	<div class="rule_white" style="width:570px"></div>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-inline"}) do |f| %>

  <%= f.email_field :email, :autofocus => true, :placeholder => 'Email', :class => "input-large" %>
  <%= f.password_field :password, :placeholder => 'Password', :class => "input-large" %>

  <%= f.submit "Sign in", :class => "btn_blue" %>
	<% end %>
	<div id="auth_links">
		<%= render "devise/shared/links" %>
	</div>
</div>



